{% set images = getImages(post) %}
{% if images.length >= 4 %}
  <div class="container mx-auto px-2 py-4">
    <h5 class="text-xl font-bold mb-4 text-center">Gallery - {{ post.title }}</h5>
    <div class="masonry-grid">
      {% for imageUrl in images %}
        <div class="masonry-item relative overflow-hidden rounded-lg">
          <img src="{{ urlFor(imageUrl) }}"
               id="image-{{ loop.index }}"
               alt="Gallery Image {{ loop.index }}"
               class="w-full h-full object-cover transition-transform transform hover:scale-105 duration-300">
          <div class="absolute inset-0 bg-black bg-opacity-40 flex justify-center items-center opacity-0 hover:opacity-100 transition-opacity duration-300">
            <button class="px-3 py-1 text-white bg-blue-600 rounded-lg"
                    masonry-target="image-{{ loop.index }}">View</button>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
{% endif %}
