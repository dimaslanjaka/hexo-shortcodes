{
  "name": "hexo-shortcodes-workspace",
  "private": true,
  "version": "1.0.0",
  "description": "Hexo shortcodes workspace",
  "main": "package/dist/index.js",
  "types": "package/dist/index.d.ts",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "test": "yarn build && cd test && hexo clean && hexo server -p 4000",
    "build": "yarn workspace hexo-shortcodes run build",
    "pack": "yarn workspace hexo-shortcodes run pack",
    "patch": "yarn workspace hexo-shortcodes version patch",
    "update:ncu": "npx npm-check-updates -u",
    "update": "yarn workspaces foreach run update:ncu && yarn cache clean && yarn install",
    "prestart": "yarn build",
    "start": "yarn workspace hexo-shortcodes-test run serve",
    "clean": "yarn workspace hexo-shortcodes run clean"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dimaslanjaka/hexo-shortcodes.git"
  },
  "bugs": {
    "url": "https://github.com/dimaslanjaka/hexo-shortcodes/issues"
  },
  "homepage": "https://github.com/dimaslanjaka/hexo-shortcodes#readme",
  "keywords": [],
  "author": {
    "email": "dimaslanjaka@gmail.com",
    "name": "Dimas Lanjaka",
    "url": "https://www.webmanajemen.com"
  },
  "license": "MIT",
  "workspaces": [
    "test",
    "lib",
    "packages/git-embed"
  ],
  "devDependencies": {
    "@types/eslint": "^8",
    "@types/fs-extra": "^11.0.1",
    "@types/gulp": "^4",
    "@types/minimist": "^1",
    "@types/node": "^18.16.3",
    "@types/prettier": "^2",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "binary-collections": "https://github.com/dimaslanjaka/bin",
    "eslint": "^8.39.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "execa": "^7.1.1",
    "git-command-helper": "^1.1.9",
    "gulp": "^4.0.2",
    "minimist": "^1.2.8",
    "nodemon": "^2.0.22",
    "npm-check-updates": "^16.10.9",
    "prettier": "^2.8.8"
  },
  "packageManager": "yarn@3.5.0",
  "dependencies": {
    "fs-extra": "^11.1.1"
  },
  "resolutions": {
    "hexo": "https://github.com/dimaslanjaka/hexo/raw/monorepo-v7/releases/hexo.tgz",
    "hexo-front-matter": "https://github.com/dimaslanjaka/hexo/raw/monorepo-v7/releases/hexo-front-matter.tgz",
    "hexo-asset-link": "https://github.com/dimaslanjaka/hexo/raw/monorepo-v7/releases/hexo-asset-link.tgz",
    "cross-spawn": "https://github.com/dimaslanjaka/node-cross-spawn/raw/private/release/cross-spawn.tgz",
    "git-command-helper": "https://github.com/dimaslanjaka/git-command-helper/raw/monorepo/release/git-command-helper.tgz"
  }
}
