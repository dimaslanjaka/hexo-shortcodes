{
  "files.autoSave": "off",
  "files.exclude": {
    "**/node_modules": true,
    "**/dist": true,
    "**/coverage": true
  },
  "editor.codeActionsOnSave": {
    "source.fixAll": true,
    "source.organizeImports": false,
    "source.fixAll.stylelint": true
  },
  "editor.formatOnSave": false,
  "[json]": {
    "editor.formatOnSave": true
  },
  "[jsonc]": {
    "editor.formatOnSave": true
  },
  "[typescript]": {
    "editor.formatOnSave": false,
    "editor.formatOnPaste": false,
    "editor.formatOnType": false
  },
  "[typescriptreact]": {
    "editor.formatOnSave": false
  },
  "[javascript]": {
    "editor.formatOnSave": false,
    "editor.codeActionsOnSave": {
      "source.organizeImports": false
    }
  },
  "[css]": {
    "editor.formatOnSave": true
  },
  "[scss]": {
    "editor.formatOnSave": true
  },
  "[html]": {
    "editor.formatOnSave": true
  },
  "prettier.endOfLine": "lf",
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "code-runner.clearPreviousOutput": true,
  "code-runner.saveAllFilesBeforeRun": true,
  "code-runner.runInTerminal": true,
  "code-runner.executorMap": {
    "typescript": "node -r ts-node/register",
    "typescriptreact": "npx cross-env-shell DEBUG=chimera-*,chimera,chimera:* ts-node"
  },
  "code-runner.respectShebang": true, // code runner follow executor maps
  "code-runner.executorMapByGlob": {
    // code runner executor map by glob
    "*.test.ts": "yarn test -- $fileNameWithoutExt"
  },
  "html.autoClosingTags": true,
  "javascript.autoClosingTags": true,
  "typescript.autoClosingTags": true,
  "javascript.suggest.autoImports": true,
  "typescript.suggest.autoImports": true,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "emmet.includeLanguages": {
    "njk": "html",
    "vue-html": "html",
    "javascript": "javascriptreact",
    "typescript": "typescriptreact"
  },
  "auto-rename-tag.activationOnLanguage": [
    "html",
    "xml",
    "php",
    "typescriptreact",
    "javascriptreact",
    "javascript",
    "typescript"
  ],
  "eslint.run": "onSave",
  "eslint.useESLintClass": true,
  "npm.packageManager": "yarn",
  "eslint.packageManager": "yarn",
  "git.enabled": true,
  "terminal.integrated.env.linux": {
    "PATH": "${env:PATH}:${workspaceFolder}/node_modules/.bin:${workspaceFolder}/bin:${workspaceFolder}/test/node_modules/.bin"
  },
  "terminal.integrated.env.windows": {
    "PATH": "${env:PATH};${workspaceFolder}\\node_modules\\.bin;${workspaceFolder}\\bin;${workspaceFolder}\\test\\node_modules\\.bin"
  },
  "eslint.debug": true,
  "editor.formatOnPaste": false,
  "editor.formatOnType": false,
  "html.format.enable": true,
  "yaml.schemas": {
    "https://json.schemastore.org/jekyll.json": "file:///d%3A/Repositories/hexo-shortcodes/test/_config.yml"
  },
  "eslint.useFlatConfig": false
}