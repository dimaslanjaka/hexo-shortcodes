{
  "files.autoSave": "off",
  "files.exclude": {
    "**/node_modules": true
  },
  "editor.codeActionsOnSave": {
    "source.fixAll": true,
    "source.organizeImports": false,
    "source.fixAll.stylelint": true
  },
  "editor.formatOnSave": false,
  "[json]": {
    "editor.formatOnSave": true
  },
  "[jsonc]": {
    "editor.formatOnSave": true
  },
  "[typescript]": {
    "editor.formatOnSave": false,
    "editor.formatOnPaste": false,
    "editor.formatOnType": false
  },
  "[typescriptreact]": {
    "editor.formatOnSave": false
  },
  "[javascript]": {
    "editor.formatOnSave": false,
    "editor.codeActionsOnSave": {
      "source.organizeImports": false
    }
  },
  "[css]": {
    "editor.formatOnSave": true
  },
  "[scss]": {
    "editor.formatOnSave": true
  },
  "[html]": {
    "editor.formatOnSave": true
  },
  "prettier.endOfLine": "lf",
  "eslint.validate": ["javascript", "javascriptreact", "typescript", "typescriptreact"],
  "code-runner.clearPreviousOutput": true,
  "code-runner.saveAllFilesBeforeRun": true,
  "code-runner.runInTerminal": true,
  "code-runner.executorMap": {
    "typescript": "npx cross-env-shell DEBUG=chimera-*,chimera,chimera:* ts-node",
    "typescriptreact": "npx cross-env-shell DEBUG=chimera-*,chimera,chimera:* ts-node"
  },
  "code-runner.respectShebang": true,
  "html.autoClosingTags": true,
  "javascript.autoClosingTags": true,
  "typescript.autoClosingTags": true,
  "javascript.suggest.autoImports": true,
  "typescript.suggest.autoImports": true,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "emmet.includeLanguages": {
    "njk": "html",
    "vue-html": "html",
    "javascript": "javascriptreact",
    "typescript": "typescriptreact"
  },
  "auto-rename-tag.activationOnLanguage": [
    "html",
    "xml",
    "php",
    "typescriptreact",
    "javascriptreact",
    "javascript",
    "typescript"
  ],
  "eslint.run": "onSave",
  "eslint.useESLintClass": true,
  "npm.packageManager": "yarn",
  "eslint.packageManager": "yarn",
  "git.enabled": true,
  "terminal.integrated.env.linux": {
    "PATH": "${env:PATH}:${workspaceFolder}/node_modules/.bin:${workspaceFolder}/bin"
  },
  "terminal.integrated.env.windows": {
    "PATH": "${env:PATH};${workspaceFolder}\\node_modules\\.bin;${workspaceFolder}\\bin"
  },
  "eslint.debug": true,
  "editor.formatOnPaste": false,
  "editor.formatOnType": false,
  "html.format.enable": true
}
