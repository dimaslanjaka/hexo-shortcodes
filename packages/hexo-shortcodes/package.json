{
  "name": "hexo-shortcodes",
  "version": "1.0.0",
  "description": "Hexo shortcodes helper. Various shortcodes for hexo, adapted from jekyll.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/dimaslanjaka/static-blog-generator-hexo.git",
    "directory": "packages/hexo-github-card"
  },
  "homepage": "https://github.com/dimaslanjaka/static-blog-generator-hexo/tree/master/packages/hexo-shortcodes",
  "files": [
    "src",
    "template",
    "template/*.njk",
    "lib",
    "readme.md",
    "dist"
  ],
  "scripts": {
    "update:postinstall": "curl -L https://github.com/dimaslanjaka/nodejs-package-types/raw/main/postinstall.js > postinstall.js",
    "update:packer": "curl -L https://github.com/dimaslanjaka/nodejs-package-types/raw/main/packer.js > packer.js",
    "update:ncu": "npx npm-check-updates -u -x hexo,hexo-fs",
    "update": "run-s update:** && npm install && node postinstall.js",
    "build": "tsc -p tsconfig.build.json && node packer.js --yarn",
    "dev": "tsc -p tsconfig.build.json --watch",
    "test": "node test.js"
  },
  "keywords": [
    "website",
    "blog",
    "hexo",
    "shortcodes",
    "shortcut"
  ],
  "author": {
    "name": "Jason Jiang",
    "email": "gisonrg@gmail.com",
    "url": "https://gisonrg.me"
  },
  "contributors": [
    {
      "email": "dimaslanjaka@gmail.com",
      "name": "Dimas Lanjaka",
      "url": "https://www.webmanajemen.com"
    }
  ],
  "license": "MIT",
  "dependencies": {
    "ansi-colors": "^4.1.3",
    "axios": "^1.3.4",
    "bluebird": "^3.7.2",
    "fs-extra": "^11.1.0",
    "hexo-util": "^3.0.1",
    "nib": "^1.2.0",
    "nunjucks": "^3.2.3",
    "sbg-utility": "^1.0.6"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.1",
    "@types/hexo": "https://github.com/dimaslanjaka/nodejs-package-types/tarball/hexo",
    "@types/hexo-util": "https://github.com/dimaslanjaka/nodejs-package-types/raw/main/hexo-util/release/types-hexo-util.tgz",
    "@types/node": "^18.14.2",
    "@types/nunjucks": "^3.2.2",
    "cross-spawn": "^7.0.3",
    "eslint": "^8.35.0",
    "execa": "^7.0.0",
    "git-command-helper": "^1.1.8",
    "gulp": "^4.0.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.4",
    "typescript": "^4.9.5"
  },
  "engines": {
    "hexo": ">= 3.0.0"
  },
  "packageManager": "yarn@3.4.1"
}
