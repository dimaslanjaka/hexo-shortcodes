{
  "$schema": "http://json.schemastore.org/nodemon",
  "exec": "npm start",
  "watch": ["./lib/src/**/*.ts", "./packages/**/src/**/*.ts", "**/tsconfig.json", "**/package.json"],
  "ignore": [
    "*.test.js",
    ".vscode",
    ".gitignore",
    "gh-pages",
    "dist",
    "tests",
    "tmp",
    "temp",
    "./src/tmp",
    "docs",
    "release",
    "**/dist/**",
    "**/node_modules/**"
  ],
  "delay": 3000,
  "ext": "*",
  "verbose": false
}
